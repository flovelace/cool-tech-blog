            {{else}}
            <a href="/login" class="nav-link nav-button">Login</a>
            <a href="login" class="btn">Sign Up</a>
            {{/if}}
        </nav>
    </header>
    <main>
        {{{ body }}}
    </main>

{{#if loggedIn}}
<script src='/javascript/logout.js'></script>
{{/if}}

</body>
</html>